<% layout("layouts/boilerplate.ejs") %>

<div class="container">
  <div class="card-container row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 g-4">
    <% for (let listing of allListings) { %>
      <div class="col">
        <div class="card listing-card shadow-lg rounded-lg overflow-hidden position-relative">
          <!-- Heart Icon for Favorites -->
          <% if (currUser) { %>
            <div class="position-absolute top-0 end-0 m-2" style="z-index: 10;">
              <button class="favorite-btn btn <%= currUser.favorites.includes(listing._id) ? 'btn-danger' : 'btn-outline-danger' %>"
                      data-listing-id="<%= listing._id %>"
                      style="border-radius: 50%; width: 40px; height: 40px; display: flex; align-items: center; justify-content: center;">
                <i class="fa-solid fa-heart"></i>
              </button>
            </div>
          <% } %>

          <a href="/listings/<%= listing._id %>" class="listing-link">
            <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image" style="object-fit: cover; height: 250px;">
          </a>
          
          <div class="card-body">
            <h5 class="card-title text-center mb-3"><%= listing.title %></h5>
            <p class="card-text text-center">
              <b>&#8377; <%= listing.price.toLocaleString("en-IN") %> / night</b>
            </p>
          </div>
        </div>
      </div>
    <% } %>
  </div>
</div>


<!-- Pagination Controls -->
<div class="pagination-container text-center mt-4">
  <% if (currentPage > 1) { %>
    <a href="/listings?page=<%= currentPage - 1 %>" class="btn pagination-btn">Previous</a>
  <% } %>

  <span class="pagination-text">Page <%= currentPage %> of <%= totalPages %></span>

  <% if (currentPage < totalPages) { %>
    <a href="/listings?page=<%= currentPage + 1 %>" class="btn pagination-btn">Next</a>
  <% } %>
</div>

<!-- Additional CSS for styling -->
<style>
  /* General styling */
  .container {
  max-width: 95%;  /* Adjust width as needed */
  padding-left: 10px !important;
  padding-right: 10px !important;
}

.row {
  margin-left: 0 !important;
  margin-right: 0 !important;
}

.col {
  padding-left: 5px !important;
  padding-right: 5px !important;
}

  .card-container {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 1.5rem;
  }

  .listing-link {
    text-decoration: none;
  }

  .listing-card {
    border-radius: 10px;
    overflow: hidden;
    background-color: #ffffff;
    transition: transform 0.3s ease-in-out;
  }

  .listing-card:hover {
    transform: translateY(-10px);
  }

  .card-img-top {
    object-fit: cover;
    height: 250px;
  }

  .card-body {
    padding: 1.25rem;
  }

  .card-title {
    font-size: 1.25rem;
    font-weight: bold;
    color: #333;
  }

  .card-text {
    color: #555;
    font-size: 1rem;
  }

  /* Heart Icon Styling */
  .favorite-btn {
    z-index: 10; /* Ensures the button stays on top */
    pointer-events: auto; /* Ensures it remains clickable */
  }

  .listing-card:hover {
    transform: translateY(-10px);
  }

  .listing-card:hover .favorite-btn {
    transform: none !important; /* Prevents button from moving */
  }

  /* Pagination styling */
  .pagination-container {
    display: flex;
    justify-content: center;
    align-items: center;
    margin-top: 20px;
  }

  .pagination-btn {
    background-color: #007bff;
    color: white;
    padding: 10px 15px;
    margin: 0 10px;
    border-radius: 5px;
    text-decoration: none;
    transition: background 0.3s;
  }

  .pagination-btn:hover {
    background-color: #0056b3;
  }

  .pagination-text {
    font-size: 1.1rem;
    font-weight: bold;
  }

  /* Responsive adjustments */
  @media (max-width: 767px) {
    .card-container {
      grid-template-columns: 1fr 1fr;
    }
  }
  @media (max-width: 576px) {
    .card-container {
      grid-template-columns: 1fr;
    }
  }
</style>

<!-- JavaScript for AJAX Favorites Toggle -->
<script>
  document.addEventListener("DOMContentLoaded", function () {
    document.querySelectorAll(".favorite-btn").forEach(button => {
      button.addEventListener("click", function (event) {
        event.preventDefault();
        const listingId = this.dataset.listingId;
        const button = this;

        fetch(`/favorites/${listingId}/toggle`, {
          method: "POST",
          headers: {
            "Content-Type": "application/json"
          },
          credentials: "same-origin"
        })
        .then(response => response.json())
        .then(data => {
          if (data.success) {
            if (data.action === "added") {
              button.classList.add("btn-danger");
              button.classList.remove("btn-outline-danger");
            } else {
              button.classList.add("btn-outline-danger");
              button.classList.remove("btn-danger");
            }
          }
        })
        .catch(error => console.error("Error:", error));
      });
    });
  });
</script>
