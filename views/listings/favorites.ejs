<% layout("layouts/boilerplate.ejs") %>


<div class="container mt-4">
    <h2>My Favorite Listings</h2>

    <% if (favoriteListings.length === 0) { %>
        <p>You have no favorite listings yet.</p>
    <% } else { %>
        <div class="row">
            <% favoriteListings.forEach(listing => { %>
                <div class="col-md-4">
                    <div class="card mb-3">
                        <img src="<%= listing.image.url %>" class="card-img-top" alt="<%= listing.title %>">
                        <div class="card-body">
                            <h5 class="card-title"><%= listing.title %></h5>
                            <p class="card-text"><%= listing.location %></p>
                            <a href="/listings/<%= listing._id %>" class="btn btn-primary">View</a>
                            <form action="/favorites/<%= listing._id %>?_method=DELETE" method="POST" class="d-inline">
                                <button type="submit" class="btn btn-danger">Remove</button>
                            </form>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    <% } %>
</div>
