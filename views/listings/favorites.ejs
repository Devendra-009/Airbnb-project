<% layout("layouts/boilerplate.ejs") %>

<div class="container py-5">
    <h2 class="mb-4 text-center text-dark fw-bold">My Favorite Listings</h2>

    <% if (favoriteListings.length === 0) { %>
        <div class="alert alert-warning text-center">You have no favorite listings yet.</div>
    <% } else { %>
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            <% favoriteListings.slice().reverse().forEach(listing => { %> 
                <div class="col">
                    <div class="card border-0 shadow rounded-3 overflow-hidden">
                        <img src="<%= listing.image.url %>" class="card-img-top" style="height: 200px; object-fit: cover;" alt="<%= listing.title %>">
                        <div class="card-body">
                            <h5 class="card-title fw-bold text-primary mb-2"><%= listing.title %></h5>
                            <p class="card-text text-muted mb-3"><i class="bi bi-geo-alt-fill"></i> <%= listing.location %></p>
                            <div class="d-flex justify-content-between">
                                <a href="/listings/<%= listing._id %>" class="btn btn-outline-primary fw-semibold px-4 py-2 flex-fill mx-1">View</a>
                                <form action="/favorites/<%= listing._id %>?_method=DELETE" method="POST" class="flex-fill mx-1">
                                    <button type="submit" class="btn btn-outline-danger fw-semibold px-4 py-2 w-100">Remove</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    <% } %>
</div>