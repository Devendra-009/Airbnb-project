<% layout("layouts/boilerplate") %>

<div class="container py-4">
  <h2 class="text-primary">My Listings</h2>
  <% if (listings.length === 0) { %>
    <p class="text-muted">No listings created yet.</p>
  <% } else { %>
    <div class="row">
      <% listings.forEach(listing => { %>
        <div class="col-md-4">
          <div class="card mb-3 shadow">
            <img src="<%= listing.image.url %>" class="card-img-top" alt="Listing">
            <div class="card-body">
              <h5><%= listing.title %></h5>
              <a href="/listings/<%= listing._id %>" class="btn btn-sm btn-primary">View</a>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  <% } %>
</div>
