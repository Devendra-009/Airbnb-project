<% layout("layouts/boilerplate.ejs") %>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css">
<script src="https://kit.fontawesome.com/your-fontawesome-kit.js" crossorigin="anonymous"></script>
    
<body>
    
    <div class="container">
        <div class="profile-card">
            <img 
                src="<%= user.profileImage || '/images/default-avatar.jpg' %>" 
                alt="Profile Picture" 
                class="profile-picture"
            >
            <h2>Welcome, <%= user.username %>!</h2>
            <p><strong>Email:</strong> <%= user.email %></p>
            <h3>Account created on: <%= user.createdAt?.toDateString() || 'Date not available' %></h3>

            <a href="/settings" class="btn btn-primary btn-custom">Edit Profile</a>
            <a href="/logout" class="btn btn-danger btn-custom">Log Out</a>
        </div>
    </div>

    <style>
        body {
            background-color: #f8f9fa;
        }
        .profile-card {
            max-width: 500px;
            margin: 50px auto;
            padding: 20px;
            background: white;
            border-radius: 10px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
            text-align: center;
        }
        .profile-picture {
            width: 120px;
            height: 120px;
            border-radius: 50%;
            object-fit: cover;
            border: 3px solid #007bff;
            margin-bottom: 15px;
        }
        .btn-custom {
            width: 100%;
            margin-top: 10px;
        }
    </style>
</body>
</html>
