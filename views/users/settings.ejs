<% layout("layouts/boilerplate.ejs") %>

<body class="bg-light py-1.8">
  <div class="container2">
    <h3 class="text-center mb-5 text-primary">Account Settings</h3>

    <!-- Display Flash Messages (Success/Error) -->
    <% if (messages && messages.length > 0) { %>
      <div class="alert alert-success" role="alert">
        <ul>
          <% messages.forEach((msg) => { %>
            <li><%= msg %></li>
          <% }) %>
        </ul>
      </div>
    <% } %>

    <!-- Settings Form -->
    <form action="/settings" method="POST" enctype="multipart/form-data">
      <div class="mb-4">
        <label for="profilePicture" class="form-label">Profile Picture</label>
        <input type="file" name="profilePicture" class="form-control" />
      </div>
      <div class="mb-4">
        <label for="username" class="form-label">Username</label>
        <input type="text" name="username" class="form-control" value="<%= user.username %>" required />
      </div>
      <div class="mb-4">
        <label for="email" class="form-label">Email</label>
        <input type="email" name="email" class="form-control" value="<%= user.email %>" required />
      </div>
      <div class="mb-4">
        <label for="password" class="form-label">Password</label>
        <input type="password" name="password" class="form-control" placeholder="New password (optional)" />
      </div>
      <button type="submit" class="btn btn-primary">Save Changes</button>
    </form>
  </div>



  <!-- Additional CSS Styles -->
  <style>
    /* Background and container styling */
    body {
      background-color: #f4f7fa;
    }

    .container2 {
      max-width: 100%;
      background-color: #ffffff;
      padding: 30px;
      border-radius: 10px;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    h3 {
      font-family: 'Arial', sans-serif;
      font-weight: bold;
      font-size: 2rem;
    }

    .form-label {
      font-size: 1.1rem;
      font-weight: 500;
    }

    .form-control {
      border-radius: 8px;
      font-size: 1rem;
      padding: 15px;
      transition: border 0.3s ease;
    }

    .form-control:focus {
      border-color: #6c757d;
      box-shadow: 0 0 0 0.2rem rgba(108, 117, 125, 0.25);
    }

    .btn-dark {
      background-color: #343a40;
      color: #fff;
      border-radius: 8px;
      padding: 12px 30px;
      font-size: 1.2rem;
      transition: background-color 0.3s ease;
    }

    .btn-dark:hover {
      background-color: #23272b;
    }

    .shadow-sm {
      box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
    }

    .form-text {
      font-size: 0.9rem;
      color: #6c757d;
    }

    .invalid-feedback {
      font-size: 0.9rem;
      color: #dc3545;
    }

    .valid-feedback {
      font-size: 0.9rem;
      color: #28a745;
    }

    .row .col-md-4,
    .row .col-md-8 {
      padding-right: 10px;
      padding-left: 10px;
    }

    /* Responsive Design */
    @media (max-width: 768px) {
      .container {
        padding: 20px;
      }

      .btn-dark {
        font-size: 1rem;
      }
    }
  </style>

</body>
</html>
